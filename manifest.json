{
    "manifest_version": 3,
    "name": "Brave Search Engine",
    "version": "1.0",

    "description": "Adds the Brave Search Engine as a usable search engine in Firefox.",

    "icons": {
        "48": "icons/brave-search-icon.svg",
        "96": "icons/brave-search-icon.svg"
    },

    "chrome_settings_overrides": {
        "homepage": "https://search.brave.com/",
        "search_provider": {
            "name": "Brave Search",
            "search_url": "https://search.brave.com/search?q={searchTerms}",
            "suggest_url": "https://search.brave.com/api/suggest?q={searchTerms}",
            "is_default": true,
            "keyword": "@brave"
        }
    },

    "host_permissions": [
        "https://search.brave.com/"
    ],

    "content_scripts": [
        {
            "matches": ["https://search.brave.com/"],
            "js": ["js/remove_dl_prompt.js"]
        }
    ],
    
    "browser_specific_settings": {
        "gecko": {
            "id": "firefox-brave-search-engine-addon@OpenSource"
        }
    },

    "developer": {
        "name": "cqhudson",
        "url": "https://github.com/cqhudson"
    }
}
